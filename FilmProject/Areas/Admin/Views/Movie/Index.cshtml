@using Core.Models
@model List<Movie>
@{
    int counter = 1;
}
<div class="container">
    <div class="row">
        <div class="col-3 mb-3 ">
            <a asp-action="Create" asp-controller="Movie" class="btn btn-outline-primary">Create Movies</a>
        </div>
    </div>
	<div class="row">
		<div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Director</th>
                        <th scope="col">RunningTime</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(counter++)</th>
                            <th><img src="~/uploads/movies/@item.ImageUrl" /></th>
                            <td>
                                <a asp-action="Update" asp-controller="Movie" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                                <a asp-action="Delete" asp-controller="Movie" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
		</div>
	</div>
</div>
